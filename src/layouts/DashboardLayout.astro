---
import "../styles/global.css";
const { title = "لوحة المستخدم" } = Astro.props;
---

<!DOCTYPE html>
<html lang="ar" dir="rtl" class="bg-gray-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>

  <body class="font-sans text-gray-800">

    <!-- NAVBAR -->
    <header class="w-full bg-white shadow-sm border-b border-gray-200">
      <nav class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="flex items-center gap-2 text-xl font-bold text-violet-600">
          <div class="bg-gradient-to-r from-violet-500 to-purple-600 text-white px-2 py-1 rounded-md">TS</div>
          <span>Transcribe Soro</span>
        </a>

        <!-- Links -->
        <div class="flex gap-6 text-gray-700">
          <a href="/dashboard" class="hover:text-violet-600">لوحة التحكم</a>
        
          <a href="/logout" class="text-red-500 hover:text-red-600">تسجيل الخروج</a>
        </div>
      </nav>
    </header>

    <!-- CONTENT -->
    <main class="max-w-6xl mx-auto px-6 py-10">
      <slot/>
    </main>

  </body>
</html>

---
import "../styles/global.css";
export const prerender = false;
import Layout from "../layouts/Layout.astro";
---
<Layout>
<html lang="ar" dir="rtl">
  <meta charset="UTF-8" />

  <body class="bg-gray-100 p-8">
    <div class="max-w-md mx-auto bg-white p-6 rounded-xl shadow-md">
      <h2 class="text-xl font-bold mb-4 text-center">تسجيل الدخول</h2>

      <form id="loginForm" class="space-y-4">
        <input
          type="email"
          name="email"
          placeholder="البريد الإلكتروني"
          required
          class="w-full border p-2 rounded"
        />

        <input
          type="password"
          name="password"
          placeholder="كلمة السر"
          required
          class="w-full border p-2 rounded"
        />

        <button
          type="submit"
          class="px-4 py-2 bg-purple-600 text-white rounded w-full"
        >
          تسجيل الدخول
        </button>
      </form>

      <p class="mt-4 text-center text-sm">
        ماعندكش حساب؟
        <a href="/register" class="text-purple-600 font-semibold">إنشاء حساب</a>
      </p>
    </div>

    <script>
      const form = document.getElementById("loginForm");

      form.onsubmit = async (e) => {
        e.preventDefault();

        const data = new FormData(form);

        const res = await fetch("/api/login", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          credentials: "include", // ⭐ مهم جداً باش يقبل الكوكي
          body: JSON.stringify({
            email: data.get("email"),
            password: data.get("password"),
          }),
        });

        if (res.status === 302 || res.ok) {
          // نجاح تسجيل الدخول
          window.location.href = "/dashboard";
        } else {
          alert("❌ خطأ في المعلومات، حاول مرة أخرى.");
        }
      };
    </script>
  </body>
</html>
</Layout>